{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Check Types",
      "type": "shell",
      "command": "npm run build",
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": "$tsc-watch"
    },
    {
      "label": "Run Linter",
      "type": "shell",
      "command": "npx next lint",
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": {
        "owner": "eslint",
        "source": "eslint",
        "applyTo": "allDocuments",
        "fileLocation": "absolute",
        "pattern": {
          "regexp": "^(.+):(\\d+):(\\d+):\\s+(error|warning|info)\\s+(.+?)\\s+(\\w+)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "severity": 4,
          "message": 5,
          "code": 6
        }
      }
    },
    {
      "label": "Check Types & Lint",
      "type": "shell",
      "command": "npm run build && npx next lint",
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": [
        "$tsc-watch",
        {
          "owner": "eslint",
          "source": "eslint",
          "applyTo": "allDocuments",
          "fileLocation": "absolute",
          "pattern": {
            "regexp": "^(.+):(\\d+):(\\d+):\\s+(error|warning|info)\\s+(.+?)\\s+(\\w+)$",
            "file": 1,
            "line": 2,
            "column": 3,
            "severity": 4,
            "message": 5,
            "code": 6
          }
        }
      ]
    }
  ]
}